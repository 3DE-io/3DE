.project
  .dflux 
    span.d &#x24D3;
    span.f f
    span.l l
    span.ux ux
  {{#project}}
  ul.features
    {{#features}}
    li {{name}}
      ul.components
        {{#components:i}}
        li(on-click='select', class="{{name==='bob' ? 'selected' : ''}}") {{name}}
        {{/components}}
        li
          input(on-enter_kp='addComponent:{{.new}}', 
                type='text',
                value='{{.new}}',
                placeholder="new component...")
    {{/features}}
    li
      input(on-enter_kp='addFeature:{{.new}}', 
            type='text',
            value='{{.new}}',
            placeholder="new feature...")
  {{/project}}